PORT=8080
NODE_ENV=development

# Database Configuration
# Option 1: SQLite (default, for local development)
DB_TYPE=sqlite
SQLITE_PATH=./data/app.db

# Option 2: PostgreSQL (for production or remote server)
# DB_TYPE=postgres
# DATABASE_URL=postgres://username:password@host:port/database
# Example for remote server:
# 测试环境 (端口 5555)
# DATABASE_URL=postgres://bili_monitor_test:your_password@192.168.1.100:5555/bili_monitor_test
# 生产环境 (端口 5556)
# DATABASE_URL=postgres://bili_monitor_prod:your_password@192.168.1.100:5556/bili_monitor_prod

# Auth
JWT_SECRET=your-super-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=7d

# Encryption (for storing SESSDATA, etc.)
ENCRYPT_KEY=your-encryption-key-at-least-32-characters-long

# Bilibili
BILI_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
