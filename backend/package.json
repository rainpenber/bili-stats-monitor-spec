{
  "name": "bili-stats-monitor-backend",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bun run scripts/start-dev.ts",
    "start": "bun run scripts/start-prod.ts",
    "start:dev": "bun run scripts/start-dev.ts",
    "start:prod": "bun run scripts/start-prod.ts",
    "generate-secret": "bun run scripts/generate-jwt-secret.ts",
    "generate-encrypt-key": "bun run scripts/generate-encrypt-key.ts",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:generate:pg": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:sqlite --schema ./src/db/schema.ts --url ./data/dev/bili-stats-dev.db --driver better-sqlite",
    "db:push:pg": "drizzle-kit push:pg --schema ./src/db/schema-pg.ts",
    "db:migrate": "drizzle-kit up:sqlite",
    "db:migrate:pg": "drizzle-kit up:pg",
    "db:studio": "drizzle-kit studio --url ./data/dev/bili-stats-dev.db --driver better-sqlite",
    "db:test": "bun run scripts/test-db-connection.ts",
    "db:verify": "bun run scripts/verify-config.ts",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.5.0",
    "drizzle-orm": "^0.29.0",
    "hono": "^4.0.0",
    "jose": "^6.1.3",
    "nanoid": "^5.1.6",
    "nodemailer": "^7.0.11",
    "postgres": "^3.4.3",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/bun": "latest",
    "@types/nodemailer": "^7.0.4",
    "@types/uuid": "^11.0.0",
    "@vitest/ui": "^4.0.16",
    "c8": "^10.1.3",
    "drizzle-kit": "^0.20.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16",
    "yaml": "^2.8.2"
  }
}
