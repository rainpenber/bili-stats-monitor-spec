{
  "name": "bili-stats-monitor-backend",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bun run src/index.ts",
    "start": "bun run src/index.ts",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:generate:pg": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:sqlite --schema ./src/db/schema.ts --url ./data/app.db --driver better-sqlite",
    "db:push:pg": "drizzle-kit push:pg --schema ./src/db/schema-pg.ts",
    "db:migrate": "drizzle-kit up:sqlite",
    "db:migrate:pg": "drizzle-kit up:pg",
    "db:studio": "drizzle-kit studio",
    "db:test": "bun run scripts/test-db-connection.ts",
    "db:verify": "bun run scripts/verify-config.ts",
    "test": "bun test"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "drizzle-orm": "^0.29.0",
    "hono": "^4.0.0",
    "jose": "^5.2.0",
    "nanoid": "^5.1.6",
    "postgres": "^3.4.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "drizzle-kit": "^0.20.0",
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  }
}
